# =============================================================================
# ROCKETRYBOX BACKEND DOCKER ENVIRONMENT TEMPLATE
# =============================================================================
# Instructions:
# 1. Copy this file to the root directory: Copy-Item backend/env.docker.template .env
# 2. Fill in your actual values
# 3. Use with: docker run --env-file .env rocketrybox-backend:latest
# =============================================================================

# Server Configuration
PORT=8000
NODE_ENV=production
API_BASE_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000

# Database Configuration (REQUIRED)
MONGODB_ATLAS_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority
DB_NAME=RocketryBox

# Redis Configuration (REQUIRED)
REDIS_HOST=your-redis-host
REDIS_PORT=6379
REDIS_USERNAME=default
REDIS_PASSWORD=your-redis-password
REDIS_TTL=3600
REDIS_OTP_TTL=300
REDIS_SESSION_TTL=86400
REDIS_DB=0

# JWT Configuration (REQUIRED)
JWT_SECRET=your-very-strong-jwt-secret-here-min-32-chars
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-jwt-refresh-secret-here-min-32-chars
JWT_REFRESH_EXPIRES_IN=30d

# Admin Configuration (REQUIRED)
ADMIN_EMAIL=admin@yourdomain.com

# AWS Configuration (Optional - for file uploads and emails)
AWS_REGION=ap-south-1
S3_BUCKET_NAME=your-bucket-name
SES_SENDER_EMAIL=noreply@yourdomain.com
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# Razorpay Configuration (Optional - for payments)
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-secret
RAZORPAY_WEBHOOK_SECRET=your-webhook-secret

# SMS Configuration (Optional)
FAST2SMS_API_KEY=your-sms-api-key
SMS_VALIDITY=5
SMS_SENDER_OTP=RBXOTP
SMS_SENDER_LOG=RBXLOG
SMS_SENDER_ADS=RBXADS

# Security Configuration
CORS_ORIGIN=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com
COOKIE_SECRET=your-cookie-secret
COOKIE_MAX_AGE=86400000
WEBHOOK_SECRET=your-webhook-secret

# OTP Configuration
OTP_EXPIRY_MINUTES=5
OTP_LENGTH=6
OTP_MAX_ATTEMPTS=3
OTP_RESEND_WAIT_MINUTES=1

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_BLOCK_DURATION=3600000

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=logs/app.log
LOG_MAX_SIZE=10485760
LOG_MAX_FILES=5

